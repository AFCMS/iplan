<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE interface SYSTEM "../schema.dtd">
<interface>
  <requires lib="gtk" version="4.0" />
  <requires lib="Adw" version="1.0" />
  <template class="ProjectList" parent="GtkBox">
    <property name="orientation">vertical</property>
    <property name="width-request">480</property>
    <child><!-- Header -->
      <object class="GtkBox" id="header">
        <property name="margin-start">12</property>
        <property name="margin-end">12</property>
        <property name="margin-bottom">6</property>
        <child><!-- Name Button -->
          <object class="GtkButton" id="name_button">
            <property name="has-frame">false</property>
            <property name="margin-start">4</property>
            <property name="hexpand">true</property>
            <property name="halign">start</property>
            <property name="label"
              bind-source="name_entry_buffer"
              bind-property="text"
              bind-flags="sync-create" />
            <signal name="clicked" handler="handle_name_button_clicked" swapped="true" />
          </object>
        </child>
        <!-- End Name Button -->
        <child><!-- Name Entry -->
          <object class="GtkEntry" id="name_entry">
            <property name="margin-start">12</property>
            <property name="margin-end">12</property>
            <property name="hexpand">true</property>
            <property name="visible"
              bind-source="name_button"
              bind-property="visible"
              bind-flags="invert-boolean">false</property>
            <property name="buffer">
              <object class="GtkEntryBuffer" id="name_entry_buffer" />
            </property>
            <signal name="activate" handler="handle_name_entry_activate" swapped="true" />
            <attributes>
              <attribute name="weight" value="PANGO_WEIGHT_BOLD" />
            </attributes>
          </object>
        </child>
        <!-- End Name Entry -->
        <child><!-- New Task Button -->
          <object class="GtkButton" id="new_task_button">
            <property name="icon-name">list-add-symbolic</property>
            <property name="has_frame">false</property>
            <property name="tooltip-text" translatable="yes">Add task</property>
            <signal name="clicked" handler="handle_new_button_clicked" swapped="true" />
          </object>
        </child>
        <!-- End New Task Button -->
        <child><!-- Project Options Button -->
          <object class="GtkMenuButton" id="options_button">
            <property name="icon_name">view-more-horizontal-symbolic</property>
            <property name="has_frame">false</property>
            <property name="popover">options_popover</property>
          </object>
        </child>
        <!-- End Project Options Button -->
      </object>
    </child>
    <!-- End Header -->
    <child><!-- Task List -->
      <object class="GtkListBox" id="tasks_box">
        <property name="valign">start</property>
        <property name="selection_mode">none</property>
        <property name="margin-top">3</property>
        <property name="margin-bottom">9</property>
        <property name="margin-start">15</property>
        <property name="margin-end">15</property>
        <signal name="row-activated" handler="handle_tasks_box_row_activated" swapped="true" />
        <style>
          <class name="tasks_box" />
          <class name="flat" />
        </style>
        <child><!-- Add task to Bottom -->
          <object class="GtkListBoxRow" id="bottom_add_task">
            <property name="activatable">false</property>
            <child>
              <object class="GtkButton">
                <property name="height-request">48</property>
                <signal name="clicked" handler="handle_add_task_to_bottom_clicked" swapped="true" />
                <style>
                  <class name="flat" />
                </style>
                <child>
                  <object class="GtkBox">
                    <property name="spacing">9</property>
                    <property name="valign">center</property>
                    <property name="halign">center</property>
                    <child>
                      <object class="GtkImage">
                        <property name="icon-name">list-add-symbolic</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkLabel">
                        <property name="label" translatable="yes">Add task</property>
                        <style>
                          <class name="heading" />
                        </style>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child><!-- End Add task to Bottom -->
        <child type="placeholder"><!-- Placeholder -->
          <object class="GtkButton">
            <property name="height-request">150</property>
            <signal name="clicked" handler="handle_new_button_clicked" swapped="true" />
            <style>
              <class name="card" />
            </style>
            <child>
              <object class="GtkBox">
                <property name="spacing">12</property>
                <property name="valign">center</property>
                <property name="halign">center</property>
                <child>
                  <object class="GtkImage">
                    <property name="icon-name">list-add-symbolic</property>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">Add task</property>
                    <style>
                      <class name="title-4" />
                    </style>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child><!-- End Placeholder -->
      </object>
    </child><!-- End Task List -->
    <child><!-- Scrolled Window - Its for horizontal layout-->
      <object class="GtkScrolledWindow" id="scrolled_window">
        <property name="vexpand">true</property>
        <property name="visible">false</property>
        <property name="hscrollbar-policy">never</property>
      </object>
    </child><!-- End Scrolled Window -->
  </template>
  <!-- Options Popover -->
  <object class="GtkPopover" id="options_popover">
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="spacing">6</property>
        <child><!-- Done Tasks Button -->
          <object class="GtkButton" id="show_done_tasks_button">
            <signal name="clicked" handler="handle_show_done_tasks_button_clicked" swapped="true" />
            <style>
              <class name="flat" />
            </style>
            <child>
              <object class="GtkBox">
                <property name="spacing">6</property>
                <child>
                  <object class="GtkImage">
                    <property name="icon-name">object-select-symbolic</property>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">Done tasks</property>
                    <attributes>
                      <attribute name="weight" value="PANGO_WEIGHT_NORMAL" />
                    </attributes>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <!-- End Done Tasks Button -->
        <child>
          <object class="GtkSeparator" />
        </child>
        <child><!-- Delete List -->
          <object class="GtkButton">
            <signal name="clicked" handler="handle_delete_button_clicked" swapped="true" />
            <style>
              <class name="flat" />
            </style>
            <child>
              <object class="GtkBox">
                <property name="spacing">6</property>
                <child>
                  <object class="GtkImage">
                    <property name="icon-name">user-trash-symbolic</property>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">Delete list</property>
                    <attributes>
                      <attribute name="weight" value="PANGO_WEIGHT_NORMAL" />
                    </attributes>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child><!-- End Delete List -->
      </object>
    </child>
  </object><!-- End Options Popover -->
</interface>