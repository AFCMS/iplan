<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>
  <template class="ProjectListItems" parent="GtkBox">
    <property name="orientation">vertical</property>
    <property name="width-request">480</property>
    <child><!-- Header -->
      <object class="GtkBox">
        <property name="margin-start">24</property>
        <property name="margin-end">24</property>
        <child>
          <object class="GtkLabel">
            <property name="label">Tasks</property>
            <property name="hexpand">true</property>
            <property name="halign">start</property>
            <style>
              <class name="heading"/>
            </style>
          </object>
        </child>
        <child><!-- New Task Button -->
          <object class="GtkButton" id="new_task_button">
            <property name="icon-name">list-add-symbolic</property>
            <property name="has_frame">false</property>
            <property name="action-name">app.new_task</property>
          </object>
        </child><!-- End New Task Button -->
        <child><!-- Project Options Button -->
          <object class="GtkMenuButton">
            <property name="icon_name">view-more-symbolic</property>
            <property name="has_frame">false</property>
            <property name="popover">project_options_popover</property>
          </object>
        </child><!-- End Project Options Button -->
      </object>
    </child><!-- End Header -->
    <child><!-- Scrolled Window -->
      <object class="GtkScrolledWindow" id="scrolled_window">
        <property name="vexpand">true</property>
        <property name="hexpand">true</property>
        <child><!-- Task List -->
          <object class="GtkListBox" id="tasks_list">
            <property name="valign">start</property>
            <property name="selection_mode">none</property>
            <property name="margin-top">12</property>
            <property name="margin-bottom">12</property>
            <property name="margin-start">24</property>
            <property name="margin-end">24</property>
            <style>
              <class name="boxed-list"/>
            </style>
          </object>
        </child><!-- End Task List -->
      </object>
    </child><!-- Scrolled Window -->
  </template>
  <!-- Options Popover -->
  <object class="GtkPopover" id="project_options_popover">
    <property name="halign">end</property>
    <property name="valign">start</property>
    <property name="has_arrow">false</property>
    <!-- offset 0,6 -->
    <child>
      <object class="GtkBox"><!-- Project Options -->
        <property name="orientation">vertical</property>
        <child><!-- Toggle Show Completed Tasks -->
          <object class="GtkBox">
            <property name="margin-start">6</property>
            <property name="margin-end">6</property>
            <property name="margin-top">6</property>
            <property name="margin-bottom">6</property>
            <child>
              <object class="GtkLabel">
                <property name="label">Completed tasks</property>
                <property name="hexpand">true</property>
                <property name="halign">start</property>
              </object>
            </child>
            <child>
              <object class="GtkSwitch" id="show_completed_tasks_switch">
                <property name="margin-start">24</property>
                <property name="valign">center</property>
              </object>
            </child>
          </object>
        </child><!-- End Toggle Show Completed Tasks -->
      </object><!-- End Project Options -->
    </child>
  </object>
  <!-- Options Popover -->
</interface>
