<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>
  <template class="ProjectHeader" parent="GtkBox">
    <property name="margin-top">15</property>
    <property name="margin-start">15</property>
    <property name="margin-end">24</property>
    <style>
      <class name="toolbar"/>
    </style>
    <child><!-- Project Name Label -->
      <object class="GtkLabel" id="project_name">
        <style>
          <class name="heading"/>
        </style>
      </object>
    </child><!-- End Project Name Label -->
    <child><!-- Project Duration button -->
      <object class="GtkMenuButton" id="project_duration_button">
        <property name="popover">project_duration_popover</property>
        <style>
          <class name="flat"/>
        </style>
        <child>
          <object class="AdwButtonContent" id="project_duration_button_content">
            <property name="icon-name">preferences-system-time-symbolic</property>
          </object>
        </child>
      </object>
    </child><!-- End Project Duration button -->
  </template>
  <!-- Project duration Popover -->
  <object class="GtkPopover" id="project_duration_popover">
    <child>
      <object class="GtkBox" id="project_duration_records">
        <property name="orientation">vertical</property>
      </object>
    </child>
  </object>
  <!-- End Project duration Popover -->
</interface>

