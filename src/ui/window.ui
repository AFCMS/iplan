<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE interface SYSTEM "schema.dtd">
<interface>
  <requires lib="gtk" version="4.0" />
  <requires lib="Adw" version="1.0" />
  <template class="IPlanWindow" parent="AdwApplicationWindow">
    <property name="width-request">480</property>
    <property name="height-request">480</property>
    <property name="content"><!-- Flap -->
      <object class="AdwFlap" id="flap">
        <property name="reveal-flap"
          bind-source="toggle_pane_button"
          bind-property="active"
          bind-flags="sync-create|bidirectional" />
        <property name="flap"><!-- Sidebar -->
          <object class="GtkBox" id="sidebar">
            <property name="orientation">vertical</property>
            <property name="width-request">240</property>
            <property name="hexpand">False</property>
            <style>
              <class name="background" />
            </style>
            <child>
              <object class="AdwHeaderBar">
                <property name="show-end-title-buttons">false</property>
                <property name="title-widget">
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">IPlan</property>
                    <style>
                      <class name="heading" />
                    </style>
                  </object>
                </property>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="calendar_button">
                <property name="margin-start">6</property>
                <property name="margin-end">6</property>
                <property name="margin-top">6</property>
                <signal name="clicked" handler="handle_calendar_button_clicked" swapped="true" />
                <style>
                  <class name="flat" />
                </style>
                <child>
                  <object class="AdwButtonContent">
                    <property name="halign">start</property>
                    <property name="icon-name">x-office-calendar-symbolic</property>
                    <property name="label" translatable="yes">Calendar</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="SidebarProjects" id="sidebar_projects" />
            </child>
          </object>
        </property><!-- End Sidebar -->
        <property name="separator">
          <object class="GtkSeparator" />
        </property>
        <property name="content"><!-- Toast Overlay -->
          <object class="AdwToastOverlay" id="toast_overlay">
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <child><!-- Header -->
                  <object class="AdwHeaderBar">
                    <property name="show-start-title-buttons">false</property>
                    <property name="title-widget">
                      <object class="GtkLabel"></object>
                    </property>
                    <child type="start"><!-- Toggle Pane Button -->
                      <object class="GtkToggleButton" id="toggle_pane_button">
                        <property name="icon-name">sidebar-show-symbolic</property>
                        <property name="active">True</property>
                        <property name="visible"
                          bind-source="flap"
                          bind-property="folded"
                          bind-flags="sync-create" />
                      </object>
                    </child><!-- End Toggle Pane Button -->
                    <child>
                      <object class="ProjectHeader" id="project_header">
                        <property name="visible"
                          bind-source="calendar_header"
                          bind-property="visible"
                          bind-flags="sync-create|invert-boolean" />
                      </object>
                    </child>
                    <child><!-- Calendar header -->
                      <object class="GtkBox" id="calendar_header">
                        <property name="visible"
                          bind-source="calendar"
                          bind-property="visible"
                          bind-flags="sync-create" />
                        <property name="margin-start">6</property>
                        <property name="spacing">3</property>
                        <property name="hexpand">true</property>
                        <child>
                          <object class="GtkImage">
                            <property name="icon-name">x-office-calendar-symbolic</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel">
                            <property name="label" translatable="yes">Calendar</property>
                            <style>
                              <class name="heading" />
                            </style>
                          </object>
                        </child>
                      </object>
                    </child><!-- End Calendar header -->
                    <child type="end"><!-- Primary Menu Button -->
                      <object class="GtkMenuButton">
                        <property name="icon-name">open-menu-symbolic</property>
                        <property name="menu-model">primary_menu_model</property>
                        <property name="primary">true</property>
                      </object>
                    </child><!-- End Primary Menu Button -->
                    <child type="end">
                      <object class="GtkButton">
                        <property name="icon-name">system-search-symbolic</property>
                        <property name="action-name">app.search</property>
                      </object>
                    </child>
                    <child type="end">
                      <object class="GtkButton" id="project_layout_button">
                        <property name="icon-name">list-symbolic</property>
                        <property name="visible"
                          bind-source="calendar_header"
                          bind-property="visible"
                          bind-flags="sync-create|invert-boolean" />
                        <signal name="clicked" handler="handle_project_layout_button_clicked" swapped="true" />
                      </object>
                    </child>
                    <child type="end"><!-- Calendar Today -->
                      <object class="GtkButton">
                        <property name="label" translatable="yes">Today</property>
                        <property name="visible"
                          bind-source="calendar_header"
                          bind-property="visible"
                          bind-flags="sync-create" />
                        <signal name="clicked" handler="handle_calendar_today_clicked" swapped="true" />
                        <style>
                          <class name="flat" />
                        </style>
                      </object>
                    </child><!-- End Calendar Today -->
                  </object>
                </child><!-- End Header -->
                <child><!-- Project Lists -->
                  <object class="ProjectLists" id="project_lists">
                    <property name="visible"
                      bind-source="calendar"
                      bind-property="visible"
                      bind-flags="sync-create|invert-boolean" />
                  </object>
                </child><!-- End Project Lists -->
                <child>
                  <object class="Calendar" id="calendar">
                    <property name="visible">false</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </property><!-- End Toast Overlay -->
      </object>
    </property>
    <!-- End Flap -->
  </template>
  <!-- Primary Menu Model -->
  <menu id='primary_menu_model'>
    <section>
      <item>
        <attribute name='label' translatable='yes'>_New List</attribute>
        <attribute name='action'>list.new</attribute>
      </item>
      <item>
        <attribute name='label' translatable='yes'>_Edit Project</attribute>
        <attribute name='action'>project.edit</attribute>
      </item>
    </section>
    <section>
      <!-- <item> -->
      <!-- <attribute name='label' translatable='yes'>_Preferences</attribute> -->
      <!-- <attribute name='action'>app.preferences</attribute> -->
      <!-- </item> -->
      <item>
        <attribute name="label" translatable="yes">_Backup</attribute>
        <attribute name='action'>app.backup</attribute>
      </item>
      <item>
        <attribute name='label' translatable='yes'>_Keyboard Shortcuts</attribute>
        <attribute name='action'>app.shortcuts</attribute>
      </item>
      <item>
        <attribute name='label' translatable='yes'>_About IPlan</attribute>
        <attribute name='action'>app.about</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name='label' translatable='yes'>_Quit</attribute>
        <attribute name='action'>app.quit</attribute>
      </item>
    </section>
  </menu>
  <!-- End Primary Menu Model -->
</interface>