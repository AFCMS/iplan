<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE interface SYSTEM "schema.dtd">
<interface>
  <requires lib="gtk" version="4.0" />
  <requires lib="Adw" version="1.0" />
  <template class="TasksList" parent="GtkBox">
    <property name="orientation">vertical</property>
    <property name="width-request">480</property>
    <property name="margin-bottom">24</property>
    <child>
      <object class="GtkBox"><!-- header -->
        <property name="margin-bottom">12</property>
        <child>
          <object class="GtkLabel" id="name">
            <style>
              <class name="heading" />
            </style>
          </object>
        </child>
        <child>
          <object class="GtkSeparator">
            <property name="hexpand">true</property>
            <style>
              <class name="spacer" />
            </style>
          </object>
        </child>
        <child>
          <object class="GtkImage">
            <property name="icon-name">preferences-system-time-symbolic</property>
            <property name="margin-end">6</property>
            <binding name="visible">
              <lookup name="visible">duration_label</lookup>
            </binding>
          </object>
        </child>
        <child>
          <object class="GtkLabel" id="duration_label"></object>
        </child>
      </object><!-- end header -->
    </child>
    <child><!-- Task List -->
      <object class="GtkListBox" id="tasks_box">
        <property name="valign">start</property>
        <property name="selection_mode">none</property>
        <signal name="row-activated" handler="handle_tasks_box_row_activated" swapped="true" />
        <style>
          <class name="tasks_box" />
        </style>
      </object>
    </child><!-- End Task List -->
  </template>
</interface>